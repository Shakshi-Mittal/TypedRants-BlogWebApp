<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Typed Rants - A Blog Web App</title>
  <link rel="stylesheet" href="/styles/layout.css">
</head>
<body>
  <%- include("partials/header.ejs") %>
  <section class ="hero">
    <h1>Welcome to Typed Rants - where opinions go to rant, not rest. </h1>
    <p>Unfiltered thoughts, questionable wisdom, and occasional brilliance.</p>
    <div class = "button">
      <button id="startReading-btn"  class="cta" onclick="window.location.href='/allPosts'">🔥Start Reading</button>
      <button id="submitRantBtn" class="cta" onclick="window.location.href ='/rants/new'">📝Post</button>
    </div>

  </section>

  <section id = "featured-rant">
    <h2>🌟 Featured Rant</h2>
    <% if (featuredPost) { %>
      <blockquote>
        "<%= featuredPost.summary %>"
      </blockquote>
      <p class="featured-title"> - <%= featuredPost.title %></p>
      <a href="/posts/<%= featuredPost.id %>" class="read-btn featured-link">Read why → </a>
    <% } else { %>
      <p>No rants featured yet.</p>
    <% } %>
  </section>

  <section id="latest-rants">
    <h2>💭Latest Rants</h2>
    <div class="rants-scroll-container">
      <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
          <div class ="rant-card">
            <h3><%= post.title %></h3>
            <p class="summary">"<%= post.summary %>"</p>
            <div class="tags">
              <% post.tags.forEach(tag => { %>
                <span class="tag"><%= tag %></span>
                <% }) %>
            </div>
            <a href="/posts/<%= post.id %>" class="push-btn">Read More</a>
          </div>
        <% }) %>
      <% }else { %>
        <p>No rants yet. Feeling suspiciously peaceful...</p>
      <% } %>  
    </div>
  </section>
  
  <!-- for submit a rant -->
  <%- include("partials/footer.ejs") %>

  <script>
  const hamburger = document.getElementById('hamburger');
  console.log("Hello");
  const mainNav = document.getElementById('mainNav');

  hamburger.addEventListener('click', () => {
    mainNav.classList.toggle('show');
  });
</script>
</body>
</html>