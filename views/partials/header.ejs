
<header>
  <!-- Desktop Header -->
  <div class="header-container-main">
    <a href="/" class="logo">
      <img src="/logo.png" alt="Site Logo">
    </a>
    <nav class="desktop-nav">
      <a href="/" class="nav-link">Home</a>
      <a href="/about" class="nav-link">About</a>
      <div class="dropdown">
        <a href="#" class="dropdown-toggle">Categories</a>
        <div class="mega-menu">
          <% if (tags && tags.length > 0) { %>
            <% tags.forEach(tag => { %>
              <a href="/tags/<%= tag %>"><%= tag %></a>
            <% }) %>
          <% } else { %>
            <span class="no-tags">No tags available</span>
          <% } %>
        </div>
      </div>
    </nav>
  </div>

  <!-- Mobile Header -->
  <div class="header-container">
    <a href="/" class="logo">
      <img src="/logo.png" alt="Site Logo">
    </a>
    <button class="hamburger" id="hamburger">&#9776;</button>
 

  <!-- Mobile Nav -->
  <nav class="top-nav" id="mainNav">
    <a href="/" class="nav-link">Home</a>
    <a href="/about" class="nav-link">About</a>
  </nav>
   </div>
</header>

<!-- Mobile Category Scroll -->
<div class="mobile-category-bar">
  <a href="/allPosts" class="category-item"> For You</a>
  <!-- <a href="/featured" class="category-item">Featured <span class="new-badge">New</span></a> -->
  <% if (tags && tags.length > 0) { %>
    <% tags.forEach(tag => { %>
      <a href="/tags/<%= tag %>" class="category-item"><%= tag %></a>
    <% }) %>
  <% } %>
</div>

<script>
  const hamburger = document.getElementById('hamburger');
  const mainNav = document.getElementById('mainNav');

  hamburger.addEventListener('click', () => {
    mainNav.classList.toggle('show');
  });
</script>
